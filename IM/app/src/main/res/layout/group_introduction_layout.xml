<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/fragment_head1" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/line_e3" />

    <com.milanac007.demo.im.ui.GlideImageView
        android:id="@+id/groupHeadIcon"
        android:layout_width="72dip"
        android:layout_height="72dip"
        android:src="@drawable/group_default"
        android:background="@color/font_grey_s"
        android:layout_margin="15dp"/>


    <TextView
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="群名称"/>

    <TextView
        android:id="@+id/groupMemberCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/font_grey_s"
        android:text="(共3人)"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/font_grey_m" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/fragment_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:text="确认加入群聊" />

        <TextView
            android:id="@+id/apply_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_button_yes_style"
            android:layout_margin="30dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20sp"
            android:text="加入该群聊"/>

    </LinearLayout>

</LinearLayout>
