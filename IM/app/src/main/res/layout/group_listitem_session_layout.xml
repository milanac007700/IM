<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_session_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/item_white_bg"
        android:orientation="horizontal" >

        <!--<test.milanac007.com.videocropdemo.library.CustomGroupAvatar-->
            <!--android:id="@+id/groupAvatar"-->
            <!--android:layout_width="50dip"-->
            <!--android:layout_height="50dip"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:background="@color/font_grey_s"-->
            <!--android:layout_marginLeft="12dip" />-->
        <com.milanac007.demo.im.ui.GlideImageView
            android:id="@+id/iv_avatar"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:background="@color/font_grey_s"
            android:src="@mipmap/group_default"
            android:layout_marginLeft="12dip" />

        <TextView
            android:id="@+id/tv_unread"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/unread_icon"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffffff"
            android:visibility="visible"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingRight="5dp">
                <TextView
                    android:id="@+id/tv_session_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_last_msg_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_grey_s"
                    android:text=""
                    android:visibility="gone"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_last_msg"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:text=""
                android:textColor="@color/font_grey_s" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>


