<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:background="@drawable/item_white_bg" >

    <com.milanac007.demo.im.ui.CircleImageView
        android:id="@+id/friend_head_img"
        style="@style/Small.CropImageView"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:src="@drawable/male" />

    <TextView
        android:id="@+id/friend_status_textview"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip"
        android:background="@drawable/add_friend_bg"
        android:gravity="center"
        android:text="接受"
        android:textColor="@color/white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/friend_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/friend_head_img"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/g_name"
        android:textColor="@color/font_grey_l"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_account_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/friend_name_textview"
        android:layout_alignTop="@id/friend_name_textview"
        android:singleLine="true"
        android:text="(52748)"
        android:textColor="@color/font_grey_s"
        android:textSize="14sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/verify_msg_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/friend_name_textview"
        android:layout_alignLeft="@id/friend_name_textview"
        android:layout_toLeftOf="@id/friend_status_textview"
        android:singleLine="true"
        android:text="好好生活"
        android:textColor="@color/font_grey_m"
        android:textSize="13sp"
        android:visibility="visible"/>

    <View
        android:id="@+id/contacts_img_line"
        android:layout_width="60dip"
        android:layout_height="0.6dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dip"
        android:layout_alignLeft="@+id/friend_head_img"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/line_e3"
        android:visibility="visible" />

</RelativeLayout>